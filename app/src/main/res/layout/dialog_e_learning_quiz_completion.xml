<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg3"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:padding="@dimen/dimen_16"
        android:text="Submitted successfully"
        android:textAlignment="center"
        android:textColor="@color/test_color_1"
        android:textSize="@dimen/text_24" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/exitBtn"
        android:layout_marginBottom="@dimen/dimen_32"
        android:background="@drawable/ripple_effect8"
        android:fontFamily="@font/poppins_regular"
        android:paddingStart="@dimen/dimen_32"
        android:paddingEnd="@dimen/dimen_32"
        android:text="Close"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16" />

</LinearLayout>