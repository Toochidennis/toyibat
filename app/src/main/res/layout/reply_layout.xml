<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/initials_cont"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/circle_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/initials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/lato"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:padding="10dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/initials_cont"
        >
    <LinearLayout
        android:id="@+id/comment_cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dike kingsley"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:fontFamily="@font/carrois_gothic"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/reply_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sir what is the topic all about"
        android:textColor="@android:color/black"
        android:fontFamily="@font/roboto"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/user"
        />

    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_cont"
            >
        <TextView
            android:id="@+id/date_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23th May,2009"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/roboto"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="11sp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/comment_text"
            />
        <TextView
            android:id="@+id/reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sending"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/roboto"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/comment_text"
            android:layout_alignParentEnd="true"
            />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>