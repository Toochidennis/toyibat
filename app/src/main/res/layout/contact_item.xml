<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardview_student_contact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="0.5dp"
    app:cardCornerRadius="15dp"
    app:contentPadding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:id="@+id/contact_counter_cnt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/circle2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/teacher_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="24sp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/name_contact_item"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Dike kingsley"

        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:layout_marginLeft="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@id/contact_counter_cnt"
        android:layout_centerInParent="true"
        />
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/call_contact_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call"
            android:layout_margin="5dp"
            />
        <ImageView
            android:id="@+id/sms_contact_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sms"
            android:layout_margin="5dp"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

</RelativeLayout>
</androidx.cardview.widget.CardView>