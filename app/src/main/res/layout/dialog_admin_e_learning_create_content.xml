<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:text="Create"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/assignment_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:clickable="true"
        android:drawablePadding="@dimen/dimen_16"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/dimen_16"
        android:text="Assignment"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16"
        app:drawableStartCompat="@drawable/baseline_assignment_24" />

    <TextView
        android:id="@+id/question_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawablePadding="@dimen/dimen_16"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/dimen_16"
        android:text="Question"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16"
        app:drawableStartCompat="@drawable/ic_question" />

    <TextView
        android:id="@+id/material_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawablePadding="@dimen/dimen_16"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/dimen_16"
        android:text="Material"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16"
        app:drawableStartCompat="@drawable/ic_material" />

    <LinearLayout
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_10"
        android:background="@drawable/line_separator"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/reuse_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawablePadding="@dimen/dimen_16"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/dimen_16"
        android:text="Reuse post"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16"
        app:drawableStartCompat="@drawable/ic_repeat" />

    <TextView
        android:id="@+id/topic_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_16"
        android:clickable="true"
        android:drawablePadding="@dimen/dimen_16"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/dimen_16"
        android:text="Topic"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16"
        app:drawableStartCompat="@drawable/ic_topic24" />

</LinearLayout>