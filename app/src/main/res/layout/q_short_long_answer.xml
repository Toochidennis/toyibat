<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:cardCornerRadius="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/question_pic"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/question_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:fontFamily="@font/open_sans"
                />
            <EditText
                android:id="@+id/question_field"
                android:layout_width="0dp"
                android:hint="Question"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_attach_file_black_24dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/answer_field"
            android:layout_width="match_parent"
            android:hint="Answer"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            >

            <ImageView
                android:id="@+id/desc_logo"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_date1"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/question_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/desc_logo"
                android:text="Date"
                android:textSize="10sp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato"
                />
            <Button
                android:id="@+id/apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:textSize="13sp"
                android:layout_alignParentEnd="true"
                android:minHeight="0dp"
                android:padding="8dp"
                android:visibility="gone"
                android:textAllCaps="false"
                android:background="@drawable/button_style4"
                android:textColor="@android:color/white"
                />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>