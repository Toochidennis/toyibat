<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".dialog.CustomCBTDialog">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/loadingPanel1"
            android:layout_height="wrap_content">
            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/course_spinner"
                android:elevation="3dp"
                android:textAlignment="center"
                android:paddingRight="15dp"
                android:background="@drawable/spinnerbackground"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_height="50dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/year_spinner"
                android:elevation="3dp"
                android:paddingRight="15dp"
                android:textAlignment="center"
                android:background="@drawable/spinnerbackground"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_height="50dp"/>
            <Button
                android:layout_width="match_parent"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="Load Exam"
                android:layout_marginTop="5dp"
                android:id="@+id/loadingButton"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"
                android:enabled="false"
                android:textColor="@color/white"
                android:background="@color/grey"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/loadingPanel2"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_width="35dp"
                android:id="@+id/progressbar3"
                android:layout_gravity="center_horizontal"
                android:progressBackgroundTint="@color/amberG"
                android:indeterminateTint="@color/amberG"
                android:indeterminate="true"
                android:layout_height="35dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Loading Exam...."
                android:id="@+id/loadingText"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:textColor="@color/amberG"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="match_parent"
                android:id="@+id/load"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:textColor="@color/amberG"
                android:text="Take Exam"
                android:background="@drawable/button2"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/loadingpanel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="20dp">
            <ProgressBar
                android:layout_width="35dp"
                android:id="@+id/progressbar4"
                android:layout_gravity="center_horizontal"
                android:progressBackgroundTint="@color/amberG"
                android:indeterminateTint="@color/amberG"
                android:indeterminate="true"
                android:layout_height="35dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>